import tkinter as tk

# Crear la ventana principal
ventana = tk.Tk()
ventana.title("Módulo de Clientes")
ventana.geometry("400x300")

# Lista de clientes (simulación)
clientes = []

# Función para agregar un cliente
def agregar_cliente():
    codigo = entry_codigo.get()
    nombre = entry_nombre.get()
    direccion = entry_direccion.get()
    telefono = entry_telefono.get()
    nit = entry_nit.get()
    clientes.append({"Código": codigo, "Nombre": nombre, "Dirección": direccion, "Teléfono": telefono, "NIT": nit})
    actualizar_lista_clientes()

# Función para eliminar un cliente seleccionado
def eliminar_cliente():
    cliente_seleccionado = lista_clientes.get(tk.ACTIVE)
    if cliente_seleccionado:
        for cliente in clientes:
            if cliente["Código"] == cliente_seleccionado:
                clientes.remove(cliente)
                actualizar_lista_clientes()
                break

# Función para modificar un cliente seleccionado
def modificar_cliente():
    cliente_seleccionado = lista_clientes.get(tk.ACTIVE)
    nuevo_codigo = entry_nuevo_codigo.get()
    nuevo_nombre = entry_nuevo_nombre.get()
    nueva_direccion = entry_nueva_direccion.get()
    nuevo_telefono = entry_nuevo_telefono.get()
    nuevo_nit = entry_nuevo_nit.get()
    for cliente in clientes:
        if cliente["Código"] == cliente_seleccionado:
            cliente["Código"] = nuevo_codigo
            cliente["Nombre"] = nuevo_nombre
            cliente["Dirección"] = nueva_direccion
            cliente["Teléfono"] = nuevo_telefono
            cliente["NIT"] = nuevo_nit
            actualizar_lista_clientes()
            break

# Función para actualizar la lista de clientes en el ListBox
def actualizar_lista_clientes():
    lista_clientes.delete(0, tk.END)
    for cliente in clientes:
        lista_clientes.insert(tk.END, cliente["Código"])

# Etiquetas y campos de entrada
label_codigo = tk.Label(ventana, text="Código del Cliente:")
entry_codigo = tk.Entry(ventana)
label_nombre = tk.Label(ventana, text="Nombre del Cliente:")
entry_nombre = tk.Entry(ventana)
label_direccion = tk.Label(ventana, text="Dirección del Cliente:")
entry_direccion = tk.Entry(ventana)
label_telefono = tk.Label(ventana, text="Teléfono del Cliente:")
entry_telefono = tk.Entry(ventana)
label_nit = tk.Label(ventana, text="NIT del Cliente:")
entry_nit = tk.Entry(ventana)

label_nuevo_codigo = tk.Label(ventana, text="Nuevo Código:")
entry_nuevo_codigo = tk.Entry(ventana)
label_nuevo_nombre = tk.Label(ventana, text="Nuevo Nombre:")
entry_nuevo_nombre = tk.Entry(ventana)
label_nueva_direccion = tk.Label(ventana, text="Nueva Dirección:")
entry_nueva_direccion = tk.Entry(ventana)
label_nuevo_telefono = tk.Label(ventana, text="Nuevo Teléfono:")
entry_nuevo_telefono = tk.Entry(ventana)
label_nuevo_nit = tk.Label(ventana, text="Nuevo NIT:")
entry_nuevo_nit = tk.Entry(ventana)

# Botones
boton_agregar = tk.Button(ventana, text="Agregar Cliente", command=agregar_cliente)
boton_eliminar = tk.Button(ventana, text="Eliminar Cliente", command=eliminar_cliente)
boton_modificar = tk.Button(ventana, text="Modificar Cliente", command=modificar_cliente)

# ListBox para mostrar la lista de clientes
lista_clientes = tk.Listbox(ventana)
lista_clientes.grid(row=1, column=0, columnspan=4, padx=10, pady=10)

# Colocar elementos en la ventana
label_codigo.grid(row=0, column=0, padx=10, pady=5)
entry_codigo.grid(row=0, column=1, padx=10, pady=5)
label_nombre.grid(row=0, column=2, padx=10, pady=5)
entry_nombre.grid(row=0, column=3, padx=10, pady=5)
label_direccion.grid(row=0, column=4, padx=10, pady=5)
entry_direccion.grid(row=0, column=5, padx=10, pady=5)

label_telefono.grid(row=0, column=6, padx=10, pady=5)
entry_telefono.grid(row=0, column=7, padx=10, pady=5)
label_nit.grid(row=0, column=8, padx=10, pady=5)
entry_nit.grid(row=0, column=9, padx=10, pady=5)

label_nuevo_codigo.grid(row=2, column=0, padx=10, pady=5)
entry_nuevo_codigo.grid(row=2, column=1, padx=10, pady=5)
label_nuevo_nombre.grid(row=2, column=2, padx=10, pady=5)
entry_nuevo_nombre.grid(row=2, column=3, padx=10, pady=5)
label_nueva_direccion.grid(row=2, column=4, padx=10, pady=5)
entry_nueva_direccion.grid(row=2, column=5, padx=10, pady=5)

label_nuevo_telefono.grid(row=2, column=6, padx=10, pady=5)
entry_nuevo_telefono.grid(row=2, column=7, padx=10, pady=5)
label_nuevo_nit.grid(row=2, column=8, padx=10, pady=5)
entry_nuevo_nit.grid(row=2, column=9, padx=10, pady=5)

boton_agregar.grid(row=3, column=0, padx=10, pady=5)
boton_eliminar.grid(row=3, column=2, padx=10, pady=5)
boton_modificar.grid(row=3, column=4, padx=10, pady=5)

# Iniciar la aplicación
ventana.mainloop()
